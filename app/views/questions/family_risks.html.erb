				$('input[name="family_risks"][value=' + localStorage.getItem('family_risks') + ']').prop('checked', 'checked');
				setTimeout(function() {
					$('#useful-link a').effect("highlight",{color: 'PowderBlue'}, 2000)
				}, 400);
		}
